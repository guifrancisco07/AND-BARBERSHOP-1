<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="icon" href="/css/imgs/logo/aba-logo-and.png" sizes="16x16">

    <link rel="stylesheet" href="/css/pages/desktop/index.css">
    <link rel="stylesheet" href="/css/pages/desktop/home/section-feedback.css">
    <link rel="stylesheet" href="/css/buttons/btn-header.css">
    <link rel="stylesheet" href="/css/pages/responsivo/resp-login-usuario.css">

    <script src="/css/partials/header/menu-mobile.js" defer></script>
    <title>Envio de Feedback - And Barbershop</title>
</head>

<body>
    <%- include ("../partials/header-visit.ejs") %> <!--ISSO TA MUITO ERRADO-->
        <main>

            <section class="fundo-section">
                <div class="interface">
                    <div class="flex">
                    
                        <div class="container">

                            <form class="form" action="/feedbacks" method="POST" id="feedbackForm">
                                <div class="heading">
                                    <h1>Avalie nosso serviço:</h1>
                        
                                    <div class="avaliacao-estrelas">
                                        <input type="radio" name="avaliacao" value="1" id="star1" required>
                                        <label class="star" for="star1"><i class="bi bi-star-fill"></i></label>
                        
                                        <input type="radio" name="avaliacao" value="2" id="star2">
                                        <label class="star" for="star2"><i class="bi bi-star-fill"></i></label>
                        
                                        <input type="radio" name="avaliacao" value="3" id="star3">
                                        <label class="star" for="star3"><i class="bi bi-star-fill"></i></label>
                        
                                        <input type="radio" name="avaliacao" value="4" id="star4">
                                        <label class="star" for="star4"><i class="bi bi-star-fill"></i></label>
                        
                                        <input type="radio" name="avaliacao" value="5" id="star5">
                                        <label class="star" for="star5"><i class="bi bi-star-fill"></i></label>
                                    </div><!--avaliacao-estrelas-->
                                </div><!--heading-->
                        
                                <div class="form-text">
                                    <textarea id="comentario" name="comentario" placeholder="Conte mais sobre sua experiência" required></textarea>
                                </div>
                        
                                <div class="btn-container">
                                    <button class="btn-agendar-header" style="width: 150px;">Enviar Feedback</button>
                                </div>
                            </form>

                        </div><!--container-->

                    </div><!--flex-->
                </div><!--interface-->
            </section>

            <%- include ("../partials/footer.ejs") %>
        </main>

        <script src="/css/partials/header/header.js"></script>
        <script>
            // JavaScript para gerenciar a seleção das estrelas
            const stars = document.querySelectorAll('.avaliacao-estrelas label');
        
            stars.forEach((star, index) => {
                star.addEventListener('click', () => {
                    // Remover a classe 'checked' de todas as estrelas
                    stars.forEach(s => s.classList.remove('checked'));
                    // Marcar a estrela atual e as anteriores
                    for (let i = 0; i <= index; i++) {
                        stars[i].classList.add('checked');
                    }
                    // Definir o valor do input correspondente
                    const radio = document.querySelector(`input[name="avaliacao"][value="${index + 1}"]`);
                    if (radio) {
                        radio.checked = true;
                    }
                });
            });
        </script>

</body>
</html>